{
  "expo": {
    "name": "AngelApp",
    "slug": "AngelApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "description": "Your personal AI assistant for natural voice conversations",
    "privacy": "public",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.centauraa.angelapp",
      "buildNumber": "1",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "AngelApp needs access to your microphone to enable voice conversations with your AI assistant.",
        "NSAppTransportSecurity": {
          "NSExceptionDomains": {
            "localhost": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSIncludesSubdomains": true
            },
            "angel-backend-dev-alb-448499488.us-west-2.elb.amazonaws.com": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSIncludesSubdomains": true
            }
          },
          "NSAllowsLocalNetworking": true
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.centauraa.angelapp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
